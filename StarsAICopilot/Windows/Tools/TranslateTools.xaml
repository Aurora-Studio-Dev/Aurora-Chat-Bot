<Window x:Class="StarsAICopilot.Windows.Tools.TranslateTools"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StarsAICopilot.Windows.Tools"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:iconPacks = "http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        ui:ThemeManager.IsThemeAware="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.ExtendViewIntoTitleBar="True"
        ui:TitleBar.IsIconVisible="True"
        Title="智能翻译" 
        MinWidth="500" MinHeight="300"
        SizeToContent="WidthAndHeight">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Image  Grid.Column='0' Source="pack://application:,,,/Image/Icon/logo.png"
                    Width="24" Height="24"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Margin="0,0,10,0"/>
            <TextBlock Grid.Column='1' FontFamily="{StaticResource Mooli}" Margin="5,0,0,0" FontWeight="SemiBold" Text='Stars AI Copilot' Foreground="BlueViolet" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <StackPanel Margin="10,0,0,0" Grid.Column="2" VerticalAlignment="Center">
                <TextBlock Text="智能翻译" 
                           FontFamily="{StaticResource Mooli}"
                           FontWeight="SemiBold"
                           FontSize="14"/>
                <TextBlock Text="通过大语言模型进行更精准的翻译。" 
                           FontSize="10" 
                           Foreground="Gray"
                           />
            </StackPanel>
        </Grid>

        <!-- 语言选择 -->
        <Border Grid.Row="1"
                CornerRadius="8"
                Padding="10"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
        
                <ComboBox x:Name="SourceLangCombo"
                          IsEditable="True"
                          IsTextSearchEnabled="True"
                          Margin="0,0,5,0"
                          FontSize="14"
                          Padding="8,4"
                          VerticalContentAlignment="Center"
                          ui:ControlHelper.PlaceholderText="输入源语言"/>
        
                <Button Grid.Column="1"
                        Margin="10,0"
                        Cursor="Hand"
                        ToolTip="执行翻译"
                        Click="TranslateButton_Click">
                    <iconPacks:PackIconMaterial 
                        Width="24" 
                        Height="24"
                        Kind="Translate"/>
                </Button>
        
                <ComboBox x:Name="TargetLangCombo"
                          IsEditable="True"
                          Grid.Column="2"
                          IsTextSearchEnabled="True"
                          Margin="5,0,0,0"
                          FontSize="14"
                          Padding="8,4"
                          VerticalContentAlignment="Center"
                          ui:ControlHelper.PlaceholderText="输入目标语言"/>
            </Grid>
        </Border>
        <!-- 翻译区域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 输入区域 -->
            <Border Grid.Column="0"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="原文输入" 
                               FontSize="14"
                               Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="InputText"
                             Grid.Row="1"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             MinHeight="120"/>
                </Grid>
            </Border>

            <!-- 输出区域 -->
            <Border Grid.Column="2"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="翻译结果" 
                               FontSize="14"
                               Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="OutputText"
                             Grid.Row="1"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             MinHeight="120"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
