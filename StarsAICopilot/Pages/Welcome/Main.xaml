<Page x:Class="StarsAICopilot.Pages.Welcome.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d"
      Title="Main">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Left"
                       Text="{DynamicResource WelcomeWindow.Main.Title}"
                       FontSize="24"
                       FontWeight="Bold" />

            <TextBlock HorizontalAlignment="Left"
                       MinHeight="0"
                       Text="{DynamicResource WelcomeWindow.Main.Description.1}"
                       FontSize="42" />

            <TextBlock HorizontalAlignment="Left"
                       Text="{DynamicResource WelcomeWindow.Main.Description.2}"
                       FontSize="42" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Margin="0,0,0,10"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom">
            <StackPanel VerticalAlignment="Bottom">
                <TextBlock HorizontalAlignment="Center"
                           Text="{DynamicResource WelcomeWindow.Main.ReadingAgree.Content}" />
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <ui:HyperlinkButton VerticalAlignment="Center"
                                        Content="{DynamicResource WelcomeWindow.Main.ReadingAgree.Link.1}"
                                        Margin="4,0,0,0" />

                    <ui:HyperlinkButton VerticalAlignment="Center"
                                        Content="{DynamicResource WelcomeWindow.Main.ReadingAgree.Link.2}"
                                        Margin="4,0,0,0" />

                    <ui:HyperlinkButton VerticalAlignment="Center"
                                        Content="{DynamicResource WelcomeWindow.Main.ReadingAgree.Link.3}"
                                        Margin="4,0,0,0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>