<Page x:Class="AuroraChatBot.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AuroraChatBot.Pages"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d"
      Title="HomePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="20" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Home}" FontSize="40"/>
                <TextBlock Margin="10,0,0,0" FontSize="30" FontWeight="Bold" Text="主页"/>
            </StackPanel>
            <TextBlock Margin="0,5,0,0" FontSize="18" Text="快捷与公告。"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="20" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Border Background="#FFFFFF" CornerRadius="10" Padding="20" Width="300" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Name="QuoteTextBlock" FontSize="18" TextWrapping="Wrap" FontWeight="Bold" Foreground="#333333"/>
                    <TextBlock Name="AuthorTextBlock" FontSize="16" TextWrapping="Wrap" FontStyle="Italic" Foreground="#777777" Margin="0,10,0,0"/>
                    <TextBlock Name="OriginTextBlock" FontSize="14" TextWrapping="Wrap" Foreground="#555555" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            <Border Background="#FFFFFF" CornerRadius="10" Padding="20" Width="300" Margin="0,20,0,0" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Name="CityInfoTextBlock" Text="-- --" FontSize="14" TextWrapping="Wrap" Foreground="#333333"/>
                    <TextBlock Name="WeatherTextBlock" Text="-- --" FontSize="16" TextWrapping="Wrap" Foreground="#333333"/>
                    <TextBlock Name="TemperatureTextBlock" Text="-- --"  FontSize="16" TextWrapping="Wrap" FontWeight="Bold" Foreground="#FF4500" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
