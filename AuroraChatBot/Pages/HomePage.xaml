<Page x:Class="StarsAICopilot.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StarsAICopilot.Pages"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d"
      Title="HomePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>   
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                            Background="White"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,0,0,5"
                            MinHeight="80">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Home}" 
                           FontSize="28"
                           Foreground="#0078D7"/>
                <StackPanel Margin="12,0,0,0">
                    <TextBlock Text="首页" 
                             FontSize="24" 
                             FontWeight="SemiBold"
                             Foreground="#1A1A1A"/>
                    <TextBlock Text="公告与信息服务。" 
                             FontSize="14"
                             Foreground="#666666"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="10"
                Margin="0"
                MinHeight="60">
            <Grid>
                <StackPanel Margin="15">
                        <TextBlock Name="QuoteTextBlock" FontSize="18" TextWrapping="Wrap" FontWeight="Bold" Foreground="#333333"/>
                        <TextBlock Name="AuthorTextBlock" FontSize="16" TextWrapping="Wrap" FontStyle="Italic" Foreground="#777777" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
