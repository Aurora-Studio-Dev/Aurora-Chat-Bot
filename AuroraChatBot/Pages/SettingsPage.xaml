<Page x:Class="AuroraChatBot.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AuroraChatBot.Pages"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d"
      Title="SettingsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Settings}" FontSize="40"/>
                <TextBlock Margin="10,0,0,0" FontSize="30" FontWeight="Bold" Text="设置"/> 
            </StackPanel>
            <TextBlock Margin="0,5,0,0" FontSize="18" Text="配置您的应用程序。"/> 
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Top">
            <TabControl Margin="0,5,0,0" Style="{StaticResource {x:Static ui:ThemeKeys.TabControlPivotStyleKey}}">
                <TabItem FontSize="20" Header="个性化">
                    <StackPanel>
                        <Border Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Top" Style="{StaticResource SettingsCard}">
                            <Grid VerticalAlignment="Center" Margin="0,10,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Light}" Grid.RowSpan="2" Margin="5,15,20,15"/>
                                <TextBlock Text="主题" Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                                <TextBlock Text="再此设置应用程序的主题" Grid.Column="1" VerticalAlignment="Top" Grid.Row="1" Margin="0,2,20,5" Opacity="0.615" FontSize="12" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"/>
                                    <ComboBox x:Name="SetTheme_ComboBox" Grid.Column="2" Grid.RowSpan="2" HorizontalAlignment="Center" >
                                        <ComboBoxItem>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconEntypo Kind="LightUp" />
                                                <TextBlock Margin="10,0,0,0" Text="Light"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconForkAwesome Kind="Moon" />
                                                <TextBlock Margin="10,0,0,0" Text="Light"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                    </ComboBox>
                            </Grid>
                        </Border>
                        <Border Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Top" Style="{StaticResource SettingsCard}">
                            <Grid VerticalAlignment="Center" Margin="0,10,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.NewWindow}" Grid.RowSpan="2" Margin="5,15,20,15"/>
                                <TextBlock Text="窗口效果" Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                                <TextBlock Text="再此设置应用程序的窗口效果。" Grid.Column="1" VerticalAlignment="Top" Grid.Row="1" Margin="0,2,20,5" Opacity="0.615" FontSize="12" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"/>
                                    <ComboBox x:Name="SetWindowShow_ComboBox" Grid.Column="2" Grid.RowSpan="2" HorizontalAlignment="Center" >
                                        <ComboBoxItem>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconEntypo Kind="LightUp" />
                                                <TextBlock Margin="10,0,0,0" Text="Light"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            <StackPanel Orientation="Horizontal">
                                                <iconPacks:PackIconForkAwesome Kind="Moon" />
                                                <TextBlock Margin="10,0,0,0" Text="Light"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                    </ComboBox>
                            </Grid>
                        </Border>
                    </StackPanel>
                </TabItem>
                <TabItem FontSize="20" Header="API 配置">
                    <Expander>
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconSimpleIcons Margin="0,3,0,0" Height="20" Width="20" Kind="OpenAi" />
                                <TextBlock Margin="10,0,0,0" FontSize="22" FontWeight="Bold" Text="ChatGPT"/> 
                            </StackPanel>
                        </Expander.Header>
                        <StackPanel>
                            <TextBlock Text="在此配置您的 API 信息。" Margin="10,0,0,0" Opacity="0.615" FontSize="12" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"/>
                            <StackPanel Margin="10,5,10,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="API 地址：" Margin="0,5,5,0"/>
                                    <TextBox x:Name="OPENAPIURL" Text="https://api.chatanywhere.tech/v1/chat/completions" Margin="0,0,5,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="API 密钥：" Margin="0,5,5,0"/>
                                    <PasswordBox x:Name="OPENAPIKEY" Margin="0,0,5,0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Page>
