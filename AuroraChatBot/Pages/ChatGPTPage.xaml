<Page x:Class="AuroraChatBot.Pages.ChatGPTPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AuroraChatBot.Pages"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d"
      Title="ChatGPTPage">
    <ScrollViewer>
    <StackPanel>
        <!-- 标题部分 -->
        <StackPanel Margin="20" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconSimpleIcons Margin="0,0,0,0" Height="40" Width="40" Kind="OpenAi" />
                <TextBlock Margin="10,0,0,0" FontSize="30" FontWeight="Bold" Text="ChatGPT"/> 
            </StackPanel>
            <TextBlock Margin="0,5,0,0" FontSize="18" Text="与由 OpenAI 研发的 ChatGPT 进行您的工作、"/> 
        </StackPanel>

        <!-- 聊天记录部分 -->
        <Border HorizontalAlignment="Stretch" Margin="0,20,0,0" Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ChatHistory">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- 用户消息样式 -->
                            <Border Background="#0078D7" 
                                    CornerRadius="10" 
                                    Padding="10" 
                                    Margin="5,5,50,5" 
                                    HorizontalAlignment="Right">
                                <TextBlock Text="{Binding Content}" 
                                           Foreground="White" 
                                           TextWrapping="Wrap" />
                            </Border>

                            <!-- AI 消息样式 -->
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding Sender}" Value="AI">
                                    <Setter Property="Border.Background" Value="White" />
                                    <Setter Property="Border.CornerRadius" Value="10" />
                                    <Setter Property="Border.Padding" Value="10" />
                                    <Setter Property="Border.Margin" Value="50,5,5,5" />
                                    <Setter Property="TextBlock.Foreground" Value="Black" />
                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- 输入框和发送按钮部分 -->
        <StackPanel Height="50" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="UserInput" 
                     Margin="0" 
                     Width="320" 
                     Height="40" 
                     FontSize="16"/>
            <Button x:Name="SendButton" 
                    Margin="10,0,0,0" 
                    Width="80" 
                    Height="40" 
                    FontSize="16" 
                    Content="发送" 
                    Style="{StaticResource AccentButtonStyle}" 
                    Click="SendButton_Click"/>
        </StackPanel>
    </StackPanel>
    </ScrollViewer>
</Page>
