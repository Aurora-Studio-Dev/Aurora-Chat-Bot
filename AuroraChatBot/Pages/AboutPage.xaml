<Page x:Class="AuroraChatBot.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AuroraChatBot.Pages"
      xmlns:modern="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d"
      Title="AboutPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="20" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <modern:FontIcon Icon="{x:Static modern:SegoeFluentIcons.Info}" FontSize="40"/>
                <TextBlock Margin="10,0,0,0" FontSize="30" FontWeight="Bold" Text="关于"/> 
            </StackPanel>
            <TextBlock Margin="0,5,0,0" FontSize="18" Text="关于信息，版权与其他。"/> 
        </StackPanel>
    </Grid>
</Page>
